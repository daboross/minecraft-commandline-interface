<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.daboross</groupId>
  <artifactId>MinecraftTesting</artifactId>
  <name>MinecraftTesting</name>
  <version>0.0.1-SNAPSHOT</version>
  <url>https://github.com/daboross/MinecraftTesting</url>
  <issueManagement>
    <system>Github Issues</system>
    <url>https://github.com/daboross/MinecraftTesting.git</url>
  </issueManagement>
  <inceptionYear>2013</inceptionYear>
  <developers>
    <developer>
      <id>daboross</id>
      <name>Dabo Ross</name>
      <email>daboross@daboross.net</email>
      <url>http://www.daboross.net</url>
      <timezone>-8</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU General Public License (GPL) Version 3</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/daboross/MinecraftTesting.git</connection>
    <developerConnection>scm:git:git@github.com:daboross/MinecraftTesting.git</developerConnection>
    <url>https://github.com/daboross/MinecraftTesting</url>
  </scm>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Main-Class>net.daboross.minecrafttesting.App</Main-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>net.theunnameddude:MCProtocolFramework</include>
                  <include>jline:jline</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <netbeans.hint.license>gpl3</netbeans.hint.license>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

